<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    >

    <com.demo.facerecognition.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <RelativeLayout
        android:layout_marginTop="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/card_bg"
            android:background="@drawable/icard_bg"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="160dp"
            android:layout_height="100dp"/>
        <ImageView
            android:background="@drawable/dagou"
            android:layout_below="@+id/card_bg"
            android:layout_toRightOf="@+id/card_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </RelativeLayout>


    <TextView
        android:id="@+id/textview"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="认证成功！\n恭喜您！\n您已完成实名认证，可返回查看。"
        />

    <LinearLayout
        android:gravity="bottom|center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dip">

        <Button
            android:id="@+id/confirm_button"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="40dp"
            android:background="@drawable/blue_bg"
            android:stateListAnimator="@null"
            android:text="完成"
            android:textColor="@color/white"
            android:layout_width="270dp"
            android:layout_height="40dp"/>


    </LinearLayout>


</LinearLayout>